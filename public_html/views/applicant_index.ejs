<!DOCTYPE html>
<html lang="<%- lang.codes.short_code %>">
<head>
    <title><%- lang.applicants.words.site_name+" - "+lang.applicants.words.nav_home %></title>
    <%- include ('header.ejs') %>
</head>
<body>
    <%- include ('applicant_nav.ejs') %>
    <div class="container-fluid mainContainer">
        <div class="container">
            <div class="row">
                <%- include ('applicant_left_side_nav.ejs') %>
                <div class="col-lg-6 pt-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <%- lang.applicants.words.nav_announcements %>
                                </div>
                                <% if (activeAnnouncements.length == 0) { %>
                                    <div class="card-body">
                                        <%- lang.applicants.sentences.no_new_announcements %>
                                    </div>
                                <% } else { %>
                                <ul class="list-group list-group-flush">
                                    <% for (var activeAnnouncement in activeAnnouncements) { %>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-12">
                                                <b style="font-size: 1.5em"><%- activeAnnouncements[activeAnnouncement].title %></b><br />
                                                <span><%- languageProcessor.renderSentence(lang.applicants.sentences.announcements_posted_time, {relative_time: moment(activeAnnouncements[activeAnnouncement].date,'x').fromNow() }) %></span><br /><br />
                                                <span style="text-align: justify" class="d-block"><%- activeAnnouncements[activeAnnouncement].message %></span>
                                            </div>
                                        </div>
                                    </li>
                                    <% } %>
                                </ul>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-12 pt-4">
                            <div class="card">
                                <div class="card-header">
                                    <%- lang.applicants.words.nav_job_postings %>
                                </div>
                                <div class="card-body">
                                    <%- lang.applicants.sentences.no_new_postings %>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <%- include ('applicant_right_side_nav.ejs') %>
                </div>
            </div>
        <div class="pt-5 pb-5"></div>
    </div>
    <%- include ('applicant_footer')%>
    <script>
        $('.nav-home1').addClass("active")
        $('.nav-home2').addClass("active")
    </script>
</body>